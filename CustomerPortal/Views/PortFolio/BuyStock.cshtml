@model CustomerPortal.Models.StockDetails

@{
    ViewData["Title"] = "BuyStock";
}

<h1 class="bg-dark rounded text-white shadow-lg">Sell Your Stock</h1>
<div class="col-md-4">
    <form asp-action="BuyStock">
        <label asp-for="@Model.StockName"></label>
        <input class="form-control" asp-for="@Model.StockName" />
        <br />
        <label asp-for="@Model.StockCount"></label>
        <input class="form-control" asp-for="@Model.StockCount" />
        <br />
        <input type="submit" value="Sell" class="btn btn-success" />
    </form>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

